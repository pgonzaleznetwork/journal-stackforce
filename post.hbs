{{!< default}}

{{#post}}

<main id="gh-main" class="gh-main">
    <article class="gh-article {{post_class}}">
        <header class="gh-article-header gh-canvas">
            {{#is "post"}}
                <span class="gh-article-meta">
                    {{#primary_author}}By <a class="gh-card-date" href="{{url}}">{{name}}</a>{{/primary_author}}
                    {{#if primary_tag}}
                        in
                        <a class="gh-article-tag" href="{{primary_tag.url}}">{{primary_tag.name}}</a>
                    {{/if}}
                    â€”
                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
                </span>
            {{/is}}

            <h1 class="gh-article-title">{{title}}</h1>

        </header>

        <div class="gh-content gh-canvas">
            <div class="gh-toc"></div> {{! The TOC will be inserted here }}
            {{content}}
        </div>

        <div id="disqus_thread"></div>
        <script>
            var disqus_config = function () {
                this.page.url = "{{url absolute="true"}}";
                this.page.identifier = "ghost-{{comment_id}}"
            };
            (function() {
            var d = document, s = d.createElement('script');
            s.src = 'https://sfapidev.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
            })();
        </script>

        {{#is "post"}}
            <footer class="gh-article-footer gh-canvas">
                <nav class="gh-navigation">
                    <div class="gh-navigation-previous">
                        {{#prev_post}}
                            <a class="gh-navigation-link" href="{{url}}">
                                <span class="gh-navigation-label">{{> icons/arrow-left}} Previous issue</span>
                                <h4 class="gh-navigation-title">{{title}}</h4>
                            </a>
                        {{/prev_post}}
                    </div>

                    <div class="gh-navigation-middle"></div>

                    <div class="gh-navigation-next">
                        {{#next_post}}
                            <a class="gh-navigation-link" href="{{url}}">
                                <span class="gh-navigation-label">Read next {{> icons/arrow-right}}</span>
                                <h4 class="gh-navigation-title">{{title}}</h4>
                            </a>
                        {{/next_post}}
                    </div>
                </nav>
            </footer>
        {{/is}}
    </article>
</main>

{{/post}}